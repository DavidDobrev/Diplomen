@model IEnumerable<BusStationTickets.Models.Category>

@{
    ViewData["Title"] = "Bus Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chose a Bus Ticket</h1>

<selection>
    <div class="row">
        @foreach(var item in Model)
            {
                <div class="col-sm-6 col-lg-4 mb-3">
                    <div class="card mb-3 text-center h-100">
                        <div class="card-body">
                            <a asp-controller="Shop" asp-action="Browse" asp-route-category="@item.CategoryId">@item.Name</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</selection>