@model IEnumerable<BusStationTickets.Models.Product>
@if (ViewBag.Category != null)
{
    <h2>@ViewBag.category</h2>
}
<selection>
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-100">
                    <div class="card-body">
                        <h5>
                            <a asp-controller="Products" asp-action="Details" asp-route-category="@p.ProductId">@p.Name</a>
                        </h5>
                        <h6>
                            @String.Format("0:c}",p.Price)
                        </h6>
                        <p>
                            @p.Description
                        </p>
                        @*Form*@
                        <form method="post" action="/Shop/AddToCart">
                            <input type="hidden" id="ProductId" name="ProductId" value="@p.ProductId" />
                            <div class="form-group">
                                <label class="control-label" for="Quantity">Quantity</label>
                                <input name="Quality" id="Quality" required min="1" max="9999999" type="number" class="input-small"/>
                            </div>
                            <button class="btn btn-primary">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</selection>